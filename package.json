{
	"name": "difftui",
	"module": "src/index.tsx",
	"version": "0.1.1",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun run --preload @opentui/solid/preload --watch src/index.tsx",
		"build": "bun run ./bundle.ts",
		"lint": "bunx @biomejs/biome check .",
		"lint:fix": "bunx @biomejs/biome check --write .",
		"format": "bunx @biomejs/biome format --write .",
		"postinstall": "bun2nix -o bun.nix"
	},
	"dependencies": {
		"@opentui/core": "^0.1.60",
		"@opentui/solid": "^0.1.60",
		"diff": "^8.0.2",
		"solid-js": "^1.9.10"
	},
	"devDependencies": {
		"@babel/core": "^7.28.5",
		"@babel/preset-typescript": "^7.28.5",
		"@types/babel__core": "^7.20.5",
		"@types/bun": "^1.3.4",
		"@types/diff": "^8.0.0",
		"babel-preset-solid": "^1.9.10",
		"bun2nix": "^2.0.6"
	},
	"peerDependencies": {
		"typescript": "^5.9.2"
	}
}
